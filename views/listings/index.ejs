<% layout("layouts/boilerplate") -%>

    <body>
        <!-- <h1>All Listings</h1> -->
        <!-- <form method="GET" action="/listings/new">
            <button>Create New Listing</button>
        </form> -->
        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }

            .filter {
                text-align: center;
                margin-right: 2rem;
                margin-top: 0.3rem;
                opacity: 0.8;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                font-size: 0.9rem;
            }

            .tax-info {
                display: none;
            }

            .tax-toggle {
                border: 1px solid black;
                border-radius: 1rem;
                padding: 1rem;
                margin-left: auto;
                display: flex;
                align-items: center;
            }
        </style>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire-flame-curved"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tree"></i></div>
                <p>National Parks</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <!-- <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div> -->
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-2 ">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card" style="width: 20rem;">
                        <!-- here image is acting as an object so we need to add .url to it-->
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image"
                            style="height:20rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %> <br>
                                </b>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %>
                            </p> /night
                            <em class="tax-info">&nbsp; &nbsp; +18% GST</em>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (taxSwitch.checked) {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>